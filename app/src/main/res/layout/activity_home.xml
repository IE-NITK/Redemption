<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">



    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:id="@+id/redemption"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:neumorph_shapeType="pressed">

        <soup.neumorphism.NeumorphTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text ="@string/redemption"
            android:textSize="30sp"
            android:textColor="@color/Black"
            />

    </soup.neumorphism.NeumorphCardView>
            <soup.neumorphism.NeumorphButton
                style="@style/Widget.Neumorph.Button"
                android:id="@+id/button8"
                android:layout_width="210dp"
                android:layout_height="80dp"
                android:layout_below="@id/redemption"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/resume"
                android:drawableStart="@drawable/resume"
                android:textSize="24sp" />


    <soup.neumorphism.NeumorphButton
        style="@style/Widget.Neumorph.Button"
        android:id="@+id/button"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_below="@id/button8"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/Black"
        android:text="@string/start"
        android:drawableStart="@drawable/sound"
        android:textSize="24sp"
        app:neumorph_shapeType="flat"/>

    <soup.neumorphism.NeumorphButton
        style="@style/Widget.Neumorph.Button"
        android:id="@+id/button3"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_below="@id/button"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/Black"
        android:text="@string/setting"
        android:drawableStart="@drawable/settings"
        android:drawablePadding="5dp"
        android:textSize="24sp"
        app:neumorph_shapeType="flat"/>

    <soup.neumorphism.NeumorphButton
        style="@style/Widget.Neumorph.Button"
        android:id="@+id/Button6"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_below="@id/button2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/Black"
        android:text="@string/quit"
        android:drawableStart="@drawable/exit"
        android:drawablePadding="5dp"
        android:textSize="24sp"
        app:neumorph_shapeType="flat"/>

    <soup.neumorphism.NeumorphButton
        style="@style/Widget.Neumorph.Button"
        android:id="@+id/button2"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_below="@id/button3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/Black"
        android:text="@string/endings"
        android:drawableStart="@drawable/endings"
        android:drawablePadding="5dp"
        android:textSize="24sp"
        app:neumorph_shapeType="flat"/>

    <soup.neumorphism.NeumorphFloatingActionButton
        style="@style/Widget.Neumorph.FloatingActionButton"
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/Button6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/info"
        tools:ignore="DuplicateIds" />

</RelativeLayout>

